<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    android:orientation="vertical"
    tools:context=".PlayAgain">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="A P P "
        android:textColor="@color/Gold"
        android:textStyle="bold"
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Q U I Z"
        android:textColor="@color/Gold"
        android:textStyle="bold"
        android:textSize="50dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/transparant">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/profil_round"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"/>

        <TextView
            android:id="@+id/yourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="35dp"
            android:textColor="@color/Gold"
            android:textStyle="bold"
            android:text="Your Name"/>


        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:text="Best Score : 0"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:backgroundTint="#025492"
            android:textColor="@color/Gold"
            android:text="Play Again" />


    </androidx.cardview.widget.CardView>

</LinearLayout>