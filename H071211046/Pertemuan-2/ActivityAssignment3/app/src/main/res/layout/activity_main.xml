<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#bfbfbf"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/numpad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/mini_pixel"
            android:gravity="end"
            android:padding="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="80sp" />

    </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/acButton"
                android:layout_width="165dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:text="AC"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/dark_purple_rounded_button"/>

            <Button
                android:id="@+id/dButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="C"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/dark_purple_button"/>

            <Button
                android:id="@+id/divisionButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="รท"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/operator_button"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:text="7"
                android:background="@drawable/purple_button"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"
                android:text="8" />

            <Button
                android:id="@+id/button9"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:text="9"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:background="@drawable/purple_button" />

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="ร"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/operator_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:text="4"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/purple_button"
                android:text="5"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:text="6"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"/>

            <Button
                android:id="@+id/minusButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="-"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/operator_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:text="1"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:text="2"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_button"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/purple_button"
                android:text="3"
                android:fontFamily="@font/mini_pixel"
                android:textColor="@color/white"
                android:textSize="60sp" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="+"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/operator_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button0"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:text="0"
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/purple_rounded_button"/>


            <Button
                android:id="@+id/equalButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:text="="
                android:textSize="60sp"
                android:fontFamily="@font/mini_pixel"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/operator_button"/>

        </LinearLayout>

        </LinearLayout>

</RelativeLayout>