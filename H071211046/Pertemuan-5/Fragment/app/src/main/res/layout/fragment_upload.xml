<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d3dfed"
    tools:context=".UploadFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#77a9c9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="upload"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ddecf3"
            android:fontFamily="@font/daysans"
            android:textSize="24sp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="#FFFFFF"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/uploadpic"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_image_24"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="110dp">

        <EditText
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#77a9c9"
            android:textColorHint="#77a9c9"
            android:fontFamily="@font/purplesmile"
            android:hint="write a caption..."/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/sentpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:textColor="@color/white"
        android:backgroundTint="#77a9c9"
        android:fontFamily="@font/purplesmile"
        android:textAllCaps="false"
        android:layout_marginHorizontal="20dp"/>

</FrameLayout>